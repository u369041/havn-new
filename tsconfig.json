{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/migrate.ts",
    "node_modules",
    "**/*.test.ts",
    "tests/**",
    "web/**",
    "client/**",
    "frontend/**",
    "public/**",
    "src/public/**",
    "src/client/**",
    "src/frontend/**"
  ]
}
