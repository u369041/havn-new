{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/server.ts",
    "src/migrate.ts",
    "src/listings.ts",
    "src/routes/properties.ts",
    "src/routes/uploads.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
