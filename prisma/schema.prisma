// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// Enums
//
enum ListingType {
  SALE
  RENT
}

enum ListingStatus {
  ACTIVE
  DRAFT
  ARCHIVED
}

//
// Models
//
model Property {
  id           String         @id @default(uuid())
  slug         String         @unique
  title        String
  description  String?
  price        Int

  // enums
  listingType  ListingType
  status       ListingStatus   @default(ACTIVE)

  // common attributes
  bedrooms     Int?
  bathrooms    Int?
  areaSqFt     Int?            // <- keep this optional if you use it; **NO sizeSqM anywhere**

  // address-ish
  addressLine1 String?
  addressLine2 String?
  city         String?
  county       String?
  eircode      String?

  latitude     Float?
  longitude    Float?

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  images       PropertyImage[]
}

model PropertyImage {
  id         String   @id @default(uuid())
  url        String
  publicId   String?          // optional; must be undefined if not set in nested create
  width      Int?
  height     Int?
  format     String?
  position   Int?

  // relation
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String

  createdAt  DateTime @default(now())
}
