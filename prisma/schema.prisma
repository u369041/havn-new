// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id           String           @id @default(cuid())
  title        String
  description  String?
  price        Int

  // Size in square meters (shown on cards/detail)
  sizeSqm      Int?

  bedrooms     Int?
  bathrooms    Int?

  // Address / location
  addressLine1 String?
  addressLine2 String?
  city         String?
  county       String?
  eircode      String?          // Irish postcode for mapping
  latitude     Float?
  longitude    Float?

  // Enums
  listingType  ListingType      @default(SALE)
  status       ListingStatus    @default(ACTIVE)
  propertyType PropertyType     @default(OTHER)

  // Relations
  images       PropertyImage[]

  slug         String           @unique
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model PropertyImage {
  id         String   @id @default(cuid())
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  publicId   String
  url        String
  width      Int?
  height     Int?
  format     String?
  position   Int      @default(0)
  createdAt  DateTime @default(now())
}

enum ListingType {
  SALE
  RENT
  SHARE
}

enum ListingStatus {
  ACTIVE
  SOLD
  RENTED
  WITHDRAWN
}

enum PropertyType {
  DETACHED
  SEMI_DETACHED
  TERRACED
  APARTMENT
  BUNGALOW
  OTHER
}
