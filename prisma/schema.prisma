// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

/* ===== Enums ===== */

enum ListingType {
  SALE
  RENT
}

enum ListingStatus {
  ACTIVE
  DRAFT
  ARCHIVED
  SOLD
  LET_AGREED
}

/* ===== Models ===== */

model Property {
  id           String         @id @default(cuid())
  title        String
  description  String?
  price        Int?

  listingType  ListingType
  status       ListingStatus  @default(ACTIVE)

  slug         String         @unique

  bedrooms     Int?
  bathrooms    Int?

  addressLine1 String?
  addressLine2 String?
  city         String?
  county       String?
  eircode      String?        @db.VarChar(16)

  latitude     Float?
  longitude    Float?

  // NOTE: No sizeSqM here (removed)
  images       PropertyImage[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model PropertyImage {
  id         String    @id @default(cuid())
  url        String
  publicId   String?         // allow null if you donâ€™t have a Cloudinary ID yet
  width      Int?
  height     Int?
  format     String?
  position   Int?            // allow null; omit if not known

  property   Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String

  createdAt  DateTime  @default(now())
}
