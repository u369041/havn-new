// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/*
 If you already have other models (e.g., User), paste them
 below as additional model blocks.
*/

// ---------- Enums ----------
enum ListingType {
  RENT
  SALE
  SHARE
}

enum ListingStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

// ---------- Models ----------
model Property {
  id            String          @id @default(cuid())
  title         String
  description   String
  price         Int
  listingType   ListingType
  status        ListingStatus    @default(ACTIVE)

  bedrooms      Int?
  bathrooms     Int?
  areaSqFt      Int?
  // Location
  addressLine1  String?
  addressLine2  String?
  city          String?
  county        String?
  eircode       String?

  // Optional geo
  latitude      Float?
  longitude     Float?

  // Media
  images        PropertyImage[]

  // For clean URLs
  slug          String           @unique

  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([city])
  @@index([county])
  @@index([status])
  @@index([listingType])
}

model PropertyImage {
  id           String   @id @default(cuid())
  propertyId   String
  property     Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  // Cloudinary references
  publicId     String
  url          String
  width        Int?
  height       Int?
  format       String?

  // For gallery ordering
  position     Int       @default(0)
  createdAt    DateTime  @default(now())

  @@index([propertyId, position])
}
