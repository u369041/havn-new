// prisma/schema.prisma

// ---- Prisma Client generator ----
generator client {
  provider = "prisma-client-js"
}

// ---- Database connection ----
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---- Enums ----
enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ---- Models ----
model User {
  id         String     @id @default(cuid())
  email      String     @unique
  name       String?
  role       Role       @default(USER)
  properties Property[]

  createdAt  DateTime   @default(now())
  // IMPORTANT: add default to allow adding this column when rows exist
  updatedAt  DateTime   @default(now()) @updatedAt
}

model Property {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  status      Status    @default(DRAFT)
  price       Int

  // TEMP: make optional so db push can succeed on existing rows
  type        String?

  bedrooms    Int?
  bathrooms   Int?
  address     String?
  latitude    Float?
  longitude   Float?
  description String?

  images      Image[]
  owner       User?     @relation(fields: [ownerId], references: [id])
  ownerId     String?

  createdAt   DateTime  @default(now())
  // add default so adding this column is safe with existing data
  updatedAt   DateTime  @default(now()) @updatedAt

  @@index([status])
  @@index([type])
  @@index([price])
}

model Image {
  id         String    @id @default(cuid())

  // TEMP: make relation optional so db push can add column without default
  property   Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String?

  // TEMP: make Cloudinary fields optional for existing rows
  publicId   String?
  url        String?

  sortOrder  Int       @default(0)
  createdAt  DateTime  @default(now())

  @@index([propertyId])
  @@unique([propertyId, sortOrder])
}
