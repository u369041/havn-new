generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id         String   @id @default(cuid())
  slug       String   @unique
  title      String
  price      Int
  beds       Int?     @default(0)
  baths      Int?     @default(0)
  ber        String?
  eircode    String?
  type       String?
  photos     String[] // postgres text[]
  overview   String?
  features   String[] // postgres text[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
