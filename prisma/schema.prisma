generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id           Int       @id @default(autoincrement())
  slug         String    @unique
  title        String
  address1     String?
  address2     String?
  city         String?
  county       String?
  eircode      String?
  price        Float?
  status       String?
  propertyType String?
  ber          String?
  bedrooms     Int?
  bathrooms    Int?
  size         Float?
  sizeUnits    String?
  features     String[]  @default([])
  description  String?
  photos       String[]  @default([])
  createdAt    DateTime  @default(now())
}